{
  "name": "@valtioinc/valtio-react-sdk",
  "description": "Valtio React SDK",
  "version": "0.0.0-semantically-released",
  "license": "MIT",
  "author": "Valtio Inc",
  "homepage": "https://valtio.io",
  "repository": "https://github.com/valtioinc/valtio-react-sdk",
  "keywords": [
    "valtio",
    "sdk",
    "react"
  ],
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "!dist/*.tsbuildinfo"
  ],
  "scripts": {
    "clean": "rm -rf ./dist ./coverage",
    "build": "yarn clean && yarn build:esbuild && yarn build:tsc",
    "build:tsc": "tsc --emitDeclarationOnly --outDir dist",
    "build:esbuild": "node esbuild.config.js",
    "publish": "yarn publish --access public",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "prepack": "yarn build",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "sca": "yarn audit-ci --config .audit-ci.jsonc --report-type summary",
    "sca:fix": "yarn yarn-audit-fix"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@commitlint/prompt-cli": "^19.5.0",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.1",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.1",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "@vitest/coverage-v8": "2.1.4",
    "audit-ci": "^7.1.0",
    "c8": "^10.1.2",
    "conventional-changelog-conventionalcommits": "^8.0.0",
    "esbuild": "^0.19.2",
    "jsdom": "^25.0.1",
    "prettier": "^3.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.3.1",
    "semantic-release": "^24.2.0",
    "typescript": "^5.2.2",
    "vitest": "^2.1.4",
    "yarn-audit-fix": "^10.1.0"
  },
  "peerDependencies": {
    "react": "^17.0.0 || ^18.0.0",
    "react-dom": "^17.0.0 || ^18.0.0"
  }
}
